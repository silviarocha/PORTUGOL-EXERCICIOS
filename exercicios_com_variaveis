programa {
	funcao inicio() {
	    
	    cadeia nome
	    cadeia sobrenome
	    
	    escreva("informe o seu nome : \n")
	    leia (nome)
	    
	    escreva("informe o seu sobrenome : \n")
	    leia (sobrenome)
	    
	    escreva("o nome completo informado eh: ", nome, sobrenome)
	}
}



programa {
	funcao inicio() {
	    
	    /*determinacao de variaveis*/
	  inteiro x, y
	  inteiro divisao
	  
	  /*entrada de dados*/
	  escreva("informe um valor para realizar a divisao: ")
	  leia(x)
	  
	  escreva("informe um outro valor para realizar a divisao: ")
	  leia(y)
	  
	  /*processamento de dados*/
	  divisao = x / y
	  
	  /*saida de dados*/
	  escreva("a divisao final eh: ", divisao)
	  
	}
}


